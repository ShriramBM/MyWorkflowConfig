# general configuration like color 
general {
  colors = true
  color_good = "#a3be8c"
  color_degraded = "#ebcb8b"
  color_bad = "#bf616a"
  interval = 5 
  separator = "|"
}

# order you like 
order += "wireless wlo1"
order += "memory"
order += "disk /"
order += "cpu_usage"
order += "battery all"
order += "volume master"
order += "cpu_temperature 0"
order += "time"


# each order configurations

wireless wlo1 {
  format_up = "WIFI: CONNECTED (%quality)" 
  format_down  = "WIFI: down"
}

memory {
  memory_used_method = classical
  format="RAM: %used / %total"
}

disk "/" {
  format = "ROM: %used / %total"
}

cpu_usage {
  format = "CPU: %usage"
}

battery all {
  path=/sys/class/power_supply/%d/uevent
  format = "BAT: %percentage"
  last_full_capacity = true
  threshold_type=percentage
  low_threshold=10
}

volume master {
    format = "VOL: %volume"
    format_muted = "VOL: MUT"
	device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_temperature 0 {
	format = "TEMP: %degrees Â°C"
	path = "/sys/class/thermal/thermal_zone7/temp"
}


time {
    format = "%Y-%m-%d %I:%M:%S %p"
}
